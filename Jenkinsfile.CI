pipeline {
    agent { label 'developNode' }
    //agent any

    environment {
        TAG = "${env.BUILD_ID}"
    }

    stages {
        stage('build') {
            steps {
                    sh 'docker compose -f compose-development.yml build'
            }
        }
        stage('Test') {
            steps {
                    sh 'docker run --rm build-test-dev-environment-app yarn test '
            }
        }
        stage('Release') {
            steps {
                    sh 'docker compose -f compose-release.yml build'
                    script {
                        withCredentials([usernamePassword(credentialsId: 'dockerhub-josanchezva-credentials', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                            sh '''
                                echo "$DOCKERHUB_PASS" | docker login -u $DOCKERHUB_USER --password-stdin
                                docker tag build-test-dev-environment-app $DOCKERHUB_USER/to-do-app:$TAG
                                docker tag build-test-dev-environment-app $DOCKERHUB_USER/to-do-app:latest
                                docker push $DOCKERHUB_USER/to-do-app:$TAG
                                docker push $DOCKERHUB_USER/to-do-app:latest

                                docker tag build-test-dev-environment-app $DOCKERHUB_USER/nginx-to-do-app:$TAG
                                docker tag build-test-dev-environment-app $DOCKERHUB_USER/nginx-to-do-app:latest
                                docker push $DOCKERHUB_USER/nginx-to-do-app:$TAG
                                docker push $DOCKERHUB_USER/nginx-to-do-app:latest
                            '''
                        }
                    }
            }
        }
        stage('triggerCDpipeline') {
            steps {
                build job: 'deploy-registry', wait: true
            }
        }
    }
}
